#include <iostream>
#include <locale.h>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Portuguese");
	string dis[9] = { "port","mat","tlp","tic","fq","ing","ai","acso","edf" }, prof[9] = { "andre","alice","clara","joão","afonso","matias","bruno","joana","luis" };
	int num, i;
	do
	{
		cout << "diz-me numero da disciplina que queres\n";
		cin >> num;
		cout << "o professor de " << dis[num] << " é " << prof[num] << "\n";
	} while (num != 0);

	for (i = 0; i < 9; i++);
	{
		cout << dis[i];
	}
	return 0;
}
